

#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

float equacoes(float num1,  float num2, float num3, float *quad1, float *quad2, float *quad3, float *soma)
{
    *quad1 = num1 * num1; // reforma
    *quad2 = num2 * num2; // reforma
    *quad3 = num3 * num3; // reforma
    *soma = *quad1 + *quad2 + *quad3; // reforma
}

int main()
{
    setlocale(LC_ALL, "Portuguese");

    float num1, num2, num3, quad1, quad2, quad3, soma = 0;

    printf("\n Informe o primeiro numero: ");
    scanf("%f", &num1);
    printf("\n Informe o segundo numero: ");
    scanf("%f", &num2);
    printf("\n Informe o terceiro numero: ");
    scanf("%f", &num3);

    equacoes(num1, num2, num3, &quad1, &quad2, &quad3, &soma); // passsa o endereço da casa para a reforma

    printf("\n O quadrado de %f é: %.2f", num1, quad1); // a casa ja esta reformada
    printf("\n O quadrado de %f é: %.2f", num2, quad2); // a casa ja esta reformada
    printf("\n O quadrado de %f é: %.2f", num3, quad3); // a casa ja esta reformada77
    printf("\n A soma dos 3 quadrados é: %.2f", soma); // a casa ja esta reformada
}
